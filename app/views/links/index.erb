<% if session[:user_id] %>
  <h1> Welcome, <%= @current_user.email_address %> </h1>
<% end %>

<h2> Links </h2>

<ul id='links'>
  <% @links.each do |link| %>
    <li>
      Title: <%= link.title %>
      URL: <%= link.url %>
      Tags: <%= link.tags.map(&:name) %>
    </li>
  <% end %>
</ul>
<form action='/links/new' method='GET'>
  <input type='submit' value='Add new link'>
</form>
